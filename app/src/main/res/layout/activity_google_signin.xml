<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#332EAFF0"
    android:gravity="center"
    android:weightSum="9"
    tools:context=".GoogleSignin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Doctor App"
        android:textSize="24dp"
        android:textColor="#000000"
        android:fontFamily="@font/nunitoextrabold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitCenter"
        android:src="@drawable/dimg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="14dp"
        android:fontFamily="@font/nunitoregular"
        android:text="Order your favourite food from\nyour favourite restaurant or by groceries\nat a big discounts."/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/imgcircle"
        android:id="@+id/mailbtn"
        android:padding="14dp"
        android:layout_margin="25dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#5E5E5E"
            android:textSize="16dp"
            android:fontFamily="@font/nunitomedium"
            android:text="Continue with Google"/>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>