<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#332EAFF0"
    android:weightSum="8"
    android:gravity="center"
    tools:context=".SelectScrn">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Doctor App"
        android:textColor="#000000"
        android:textSize="24dp"
        android:fontFamily="@font/nunitoextrabold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:scaleType="fitCenter"
        android:src="@drawable/dimg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selectbtn1"
        android:id="@+id/dochome"
        android:text="Doctor"
        android:elevation="10dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/nunitobold"
        android:textColor="#CC5543FF"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/patienthome"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selectbtn2"
        android:text="Patient"
        android:fontFamily="@font/nunitobold"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>