<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#332EAFF0"

    tools:context=".Login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logindoc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="24dp"
        android:fontFamily="@font/nunitoextrabold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="Email"
        android:fontFamily="@font/nunitobold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/selectbtn1"
        android:elevation="10dp"
        android:padding="15dp"
        android:hint="Enter Email"
        android:fontFamily="@font/nunitomedium"
        android:text=""
        android:textColorHint="#99000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:text="Password"
        android:fontFamily="@font/nunitobold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/selectbtn1"
        android:fontFamily="@font/nunitomedium"
        android:elevation="10dp"
        android:padding="15dp"
        android:hint="Enter Password"
        android:text=""
        android:textColorHint="#99000000"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:background="@drawable/selectbtn2"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donâ€™t have an account?"
            android:textSize="12dp"
            android:textColor="#000000"
            android:fontFamily="@font/nunitolight"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up"
            android:textSize="12dp"
            android:textColor="#CC5543FF"
            android:fontFamily="@font/nunitolight"/>

    </LinearLayout>

</LinearLayout>